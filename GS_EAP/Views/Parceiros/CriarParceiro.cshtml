@model GS_EAP.Models.Parceiros.Parceiros

@using (Html.BeginForm("CriarParceiro", "Parceiros", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-row">
        <input asp-for="IdParceiro" hidden />
        <div class="form-group col-md-6">
            <label for="NomParceiro">Marca</label>
            <input asp-for="NomParceiro" required class="form-control" placeholder="Enel" />
        </div>
        <div class="form-group col-md-4">
            <label for="NumCNPJ">Modelo do Veiculo</label>
            <input asp-for="NumCNPJ" required class="form-control" placeholder="CNPJ" />
        </div>
        <div class="form-group col-md-2">
            <label>Ativo</label> <br/>
            <div class="form-check form-check-inline">
                <input asp-for="Status" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="1">
                <label class="form-check-label" for="inlineRadio1">Sim</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Status" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="0">
                <label class="form-check-label" for="inlineRadio2">Não</label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="NomLogradouro">Endereço</label>
            <input asp-for="NomLogradouro" class="form-control" placeholder="Rua Roque José Número 2000" />
        </div>
        <div class="form-group col-md-6">
            <label for="NomComplemento">Complemento</label>
            <input asp-for="NomComplemento" class="form-control" id="inputAddress2" placeholder="Bloco / Apto" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">Cidade</label>
            <input asp-for="NomCidade" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label for="NomEstado">Estado</label>
            <select asp-for="NomEstado" class="form-control">
                <option selected>Escolha...</option>
                <option>...</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="NomCEP">CEP</label>
            <input asp-for="NomCEP" class="form-control" />
        </div>
    </div>

    @if (Model.IdParceiro != 0)
    {
        <button class="btn btn-primary" asp-controller="Parceiros" asp-action="EditarParceiroPost">Salvar</button>
        @Html.ActionLink("Excluir", "ExcluirParceiro", "Parceiros",new{IdParceiro=Model.IdParceiro}, new {@class = "btn btn-danger"})

    }
    else
    {
        <button type="submit" class="btn btn-primary">Salvar</button>
    }
    @Html.ActionLink("Voltar", "Index", "Parceiros",null, new {@class = "btn btn-secondary ml-1"})

}

